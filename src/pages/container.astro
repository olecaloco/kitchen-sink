---
import Layout from "../layouts/inner.astro";
---

<Layout title="Container">
    <div class="code-group my-20">
        <div class="code-block">
            <div class="container mx-auto mb-4 h-16 bg-pink-200 rounded"></div>
            <div class="container mx-auto mb-4 w-full max-w-xl h-16 text-center bg-pink-200 rounded">xl</div>
            <div class="container mx-auto mb-4 w-full max-w-lg h-16 text-center bg-pink-200 rounded">lg</div>
            <div class="container mx-auto mb-4 w-full max-w-md h-16 text-center bg-pink-200 rounded">md</div>
            <div class="container mx-auto mb-4 w-full max-w-sm h-16 text-center bg-pink-200 rounded">sm</div>
        </div>

        <div class="code-output"></div>
    </div>
</Layout>
